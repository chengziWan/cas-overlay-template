    USER_NAME,
    LOGIN_NAME,
    LOGIN_PASSWD,
    ORG_ID,
    USER_CARD,
    USER_EMAIL,
    USER_PHONE,
    USER_CITY_ID,
    USER_TYPE,
    SEND_FLAG,
    USER_STATUS,
    ADD_TIME,
    REMARK
  </sql>
  <select id="selectByLoginName" parameterType="java.lang.String" resultMap="BaseResultMap">
    select 
    *
    from sys_user_info
    where LOGIN_NAME = #{loginName,jdbcType=VARCHAR}
  </select>
</mapper>
